{
  "name": "tiptap-markdown",
  "version": "0.8.10",
  "description": "Edit markdown content in tiptap editor.",
  "scripts": {
    "test": "vitest",
    "dev": "vite example",
    "build": "vite build",
    "build:example": "vite build example",
    "preview": "vite preview example",
    "preversion": "npm run build",
    "update:tiptap": "update-by-scope @tiptap",
    "update:remark": "npm i rehype@latest rehype-dom-parse@latest rehype-dom-stringify@latest rehype-minify-whitespace@latest rehype-raw@latest rehype-remark@latest remark@latest remark-breaks@latest remark-gfm@latest remark-rehype@latest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "main": "dist/tiptap-markdown.umd.js",
  "module": "dist/tiptap-markdown.es.js",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/tiptap-markdown.es.js",
      "require": "./dist/tiptap-markdown.umd.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "index.d.ts"
  ],
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aguingand/tiptap-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/aguingand/tiptap-markdown/issues"
  },
  "types": "index.d.ts",
  "author": "Antoine Guingand",
  "license": "MIT",
  "dependencies": {
    "rehype": "^13.0.2",
    "rehype-dom-parse": "^5.0.2",
    "rehype-dom-stringify": "^4.0.1",
    "rehype-minify-whitespace": "^6.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-remark": "^10.0.0",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remark-rehype": "^11.1.1"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@tiptap/core": "^2.10.3",
    "@tiptap/extension-image": "^2.10.3",
    "@tiptap/extension-link": "^2.10.3",
    "@tiptap/extension-table": "^2.10.3",
    "@tiptap/extension-table-cell": "^2.10.3",
    "@tiptap/extension-table-header": "^2.10.3",
    "@tiptap/extension-table-row": "^2.10.3",
    "@tiptap/extension-task-item": "^2.10.3",
    "@tiptap/extension-task-list": "^2.10.3",
    "@tiptap/extension-underline": "^2.10.3",
    "@tiptap/pm": "^2.10.3",
    "@tiptap/starter-kit": "^2.10.3",
    "jest-serializer-html": "^7.1.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "update-by-scope": "^1.1.3",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
